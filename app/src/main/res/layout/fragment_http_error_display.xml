<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView android:id="@+id/err_scr_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/textLightGray"
            android:text="Idfhsdgf sdfgksd f sdfsdf sdhfosd"/>

        <TextView android:id="@+id/txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="GET http://123.123.0.1:8080/status"/>

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/textLightGray"/>

        <TextView android:id="@+id/txt_resp_code_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FF4545"
            android:textSize="16sp"
            android:text="400 Bad request"/>

        <TextView android:id="@+id/txt_exc_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FF4545"
            android:textSize="16sp"
            android:text="IOException - Socket timeout"/>
        <TextView android:id="@+id/txt_raw_payload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="{\t\'success\': false}\n"/>
        <LinearLayout android:id="@+id/api_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/textLightGray"
                android:text="Server-provided API errors"/>
            <LinearLayout android:id="@+id/api_errors_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>